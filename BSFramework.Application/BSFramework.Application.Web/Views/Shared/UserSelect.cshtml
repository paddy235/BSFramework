<script>
    /// <summary>
    /// 选择部门
    /// </summary>
    ///<param name="checkMode">单选：single；多选:multiple</param>
    /// <param name="callback">回调函数</param>
    /// <param name="category">省级,厂级,部门,班组</param>
    function selectUser(deptid, checkMode, callback, category) {
        return dialogOpen({
            id: "UserSelect",
            title: "选择用户",
            url: encodeURI('/..@Url.Action("Select", "User", new { area = "BaseManage" })?deptid=' + (deptid || '') + '&checkMode=' + (checkMode || 'single')) + '&categorys=' + (category || ''),
            width: ($(top.window).width() - 300) + "px",
            height: ($(top.window).height() - 200) + "px",
            callBack: function (iframeId) {
                top.document.getElementById(iframeId).contentWindow.AcceptClick(callback);
            }
        });
    }
</script>
