    function AcceptClick() {
      var myform = new FormData();
        myform.append('file', $('#select_file')[0].files[0]);
        $.ajax({
            url: "@Url.Action("Import")",
            type: 'POST',
            dataType: 'json',
            data: myform,
            contentType: false,
            processData: false,
            clearForm: true,
            success: function (data) {
                if (data.success) {
                    layer.alert("导入成功", { icon: 1 }, function () {
                        dialogClose();
                    })
                    $.currentIframe().ref();
                }
                else
                    layer.alert(data.message, { icon: 2 });
            },
            error: function (data) {
            }
        });






