@using BSFramework.Application.Entity.BaseManage
@using BSFramework.Application.Entity.WorkMeeting.ViewModel;
@model Dictionary<int, List<KeyValue>>
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    UserInfoEntity user = ViewBag.User;
}
<style>
    #grid {
        border: 1px solid #ccc;
        text-align: center;
        margin: 20px 0px 0px 20px;
    }

        #grid td {
            height: 30px;
            border: 1px solid #ccc;
        }

        #grid thead tr {
            height: 30px;
            background-color: rgb(245, 245, 246);
        }
</style>
<div style="margin-top: 20px; margin-right: 30px;">
    <table class="form">
        <tr>
            <th class="formTitle">姓名</th>
            <td class="formValue">
                <div class="input-group" style="width:100%;">
                    <input type="text" class="form-control" readonly value="@user.RealName" />
                </div>
            </td>
            <th class="formTitle">性别</th>
            <td class="formValue">
                <input type="text" class="form-control" readonly value="@Html.Raw(user.Gender.HasValue ? (user.Gender.Value == 1 ? "男" : "女") : "")" />
            </td>
        </tr>
        <tr>
            <th class="formTitle">所属单位</th>
            <td class="formValue">
                <input type="text" class="form-control" readonly value="@user.DeptName" />
            </td>
            <th class="formTitle">岗位</th>
            <td class="formValue">
                <input type="text" class="form-control" readonly value="@user.DutyName" />
            </td>
        </tr>
        <tr>
            <td class="formValue" colspan="4">
                <table cellpadding="0" cellspacing="0" class="table1" border="1" style="width:100%; " id="grid">
                    <thead>
                        <tr>
                            <th>年度</th>
                            <th>一月</th>
                            <th>二月</th>
                            <th>三月</th>
                            <th>四月</th>
                            <th>五月</th>
                            <th>六月</th>
                            <th>七月</th>
                            <th>八月</th>
                            <th>九月</th>
                            <th>十月</th>
                            <th>十一月</th>
                            <th>十二月</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Key
                                    </td>
                                    @foreach (var kv in item.Value)
                                    {
                                        <td>@kv.Value</td><!-- 月份后台已排序-->
                                    }
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="13" style="color:red;">暂无数据</td></tr>
                        }

                    </tbody>
                </table>
            </td>
        </tr>
    </table>
</div>
