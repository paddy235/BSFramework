                        </a>
                    </div>

                </div>
            </div>

            <div class="pd-10 my-body">
                <div style="padding:10px 120px;">
                    <div style="text-align:center;font-size:30px;font-weight:bold;">@Model.FullHead</div>
                    <table style="width:100%; color:gray;">
                        <tr>
                            <td style="width:50%; text-align:right;padding-right:10px;"><h3>@(Model.NoticeDept)</h3></td>
                            <td style="width:50%;padding-left:10px;"><h3>@Model.ReleaseTime.Value.ToString("yyyy-MM-dd")</h3></td>
                        </tr>
                    </table>
                    <textarea style="width:100%;height:500px;font-size:22px;border:0px;outline:none;" readonly="readonly">@Model.NewsContent</textarea>
                    <div style="margin-top:10px;margin-bottom:10px;font-size:30px;font-weight:bold;">
                        附件：
                    </div>
                    <div>
                        <ul style="padding-left:0px;line-height:40px;">
                            @{
                                var lls = (IList<BSFramework.Application.Entity.PublicInfoManage.FileInfoEntity>)ViewData["files"];
