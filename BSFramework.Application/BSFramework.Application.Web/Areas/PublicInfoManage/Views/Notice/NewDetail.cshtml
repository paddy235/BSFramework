                                {
                                    for (int i = 0; i < lls.Count(); i++)
                                    {
                                        <li style="font-size:18px;list-style:none;">
                                            <label>材料 @Html.Raw(i + 1) </label>
                                            <a href="@Url.Action("DownloadFile", "ResourceFile", new { keyValue =lls[i].FileId, area = "PublicInfoManage" })" target="_blank" style="cursor:pointer;color:blue;text-decoration:underline;margin-left:15px;" title="下载文件">@lls[i].FileName</a>
                                        </li>

                                    }
                                }
                            }
                        </ul>
                    </div>
