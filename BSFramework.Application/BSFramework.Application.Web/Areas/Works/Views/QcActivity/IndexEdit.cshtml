                    '<p class="imgWrap"></p>' +
                   '<p class="progress" style="display:none;"><span></span></p>';
                });
                $("#filePicker").append(html);
                html = "";
                $(data.Photos).each(function (i, item) {
                    html += '<div class="filelist"><div class="row" style="margin:10px;"><div class="col-sm-6">' + (item.FileName + item.FileExtensions) + '</div><div class="col-sm-2"><a href="../../ResourceFile/DownloadFile?keyValue=' + item.FileId + '\" target="_blank" style="cursor:pointer"  title="下载文件"><i class="fa fa-download"></i></a>&nbsp;&nbsp;&nbsp;<i class="fa fa-trash-o"  style="cursor:pointer" onclick="removeFile(\'' + item.FileName + item.FileExtensions + '\',\'' + keyValue + '\',this)" title="删除文件"></i></div><img style="width:100px;height:100px" src="' + item.FilePath + '" /></div></div>'
                    '<p class="imgWrap"></p>' +
                   '<p class="progress" style="display:none;"><span></span></p>';
                });
                $("#filePicker1").append(html);

            }
        })

    })
    jQuery(function () {
        jQuery(function () {
            var mark = $("input[type=radio][checked]").val();
            $("input[type=radio]").click(function () {
                mark = $(this).val();
                $("input[type=radio]").each(function () {
                    if ($(this).val() != mark) {
                        $(this).removeAttr('checked');
                    }
                    else {
                        $(this).attr('checked', 'checked');

                    }

                });

            });

        });

    });
