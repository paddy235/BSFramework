@model BSFramework.Application.Entity.InnovationManage.QcActivityEntity
@{
    ViewBag.Title = "IndexDetail";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<link href="~/content/scripts/plugins/webuploader/webuploader.css" rel="stylesheet" />
<link href="~/content/scripts/plugins/webuploader/webuploader-demo.css" rel="stylesheet" />
<script type="text/javascript" src="~/content/scripts/business/common.js"></script>
<script type="text/javascript" src="~/content/scripts/plugins/webuploader/webuploader.min.js"></script>
<script>
    jQuery(function () {
        var ck = "@Model.subjectstate";
        $("input[type=radio]").each(function () {
            if ($(this).val() == ck) {
                $(this).attr('checked','checked');
            }
        });

    });

</script>
<div style="margin-top: 20px; margin-right: 30px;">
    <table class="form">
        <tr>
            <td class="formTitle">部门<font face="宋体">*</font></td>
            <td class="formValue">
                <input id="deptname" class="form-control" value="@Model.deptname" readonly="readonly" />

            </td>
            <td class="formTitle">课题小组名称<font face="宋体">*</font></td>
            <td class="formValue">
                <input id="groupname" type="text" class="form-control" readonly="readonly" value="@Model.groupname" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">成立时间<font face="宋体">*</font></td>
            <td class="formValue">
                <input type="text" class="form-control" id="setuptime" readonly="readonly" value="@Model.setuptime.ToString("yyyy-MM-dd")">
            </td>
            <td class="formTitle">注册时间<font face="宋体">*</font></td>
            <td class="formValue">
                <input type="text" class="form-control" id="registrationtime" readonly="readonly" value="@Model.registrationtime.ToString("yyyy-MM-dd")">
            </td>
        </tr>
        <tr>
            <td class="formTitle">小组类型</td>
            <td class="formValue">

                <input type="text" class="form-control" id="grouptype" readonly="readonly" value="@Model.grouptype">

            </td>
            <td class="formTitle">课题小组编号</td>
            <td class="formValue">
                <input type="text" class="form-control" id="groupcode" readonly="readonly" value="@Model.groupcode">
            </td>
        </tr>
        <tr>
            <td class="formTitle">课题名称<font face="宋体">*</font></td>
            <td class="formValue" colspan="3">
                <input type="text" class="form-control" id="subjectname" readonly="readonly" value="@Model.subjectname">
            </td>
        </tr>
        <tr>
            <td class="formTitle">课题编号<font face="宋体">*</font></td>
            <td class="formValue">
                <input type="text" class="form-control" id="subjectcode" readonly="readonly" value="@Model.subjectcode">

            </td>
            <td class="formTitle">立题时间<font face="宋体">*</font></td>
            <td class="formValue">
                <input type="text" class="form-control" id="subjecttime" readonly="readonly" value="@Model.subjecttime.ToString("yyyy-MM-dd")">
            </td>
        </tr>
        <tr>
            <td class="formTitle">组长<font face="宋体">*</font></td>
            <td class="formValue">
                <input class="form-control" placeholder="点击选择人员、单选" id="groupboss" readonly="readonly" value="@Model.groupboss" />

            </td>
            <td class="formTitle">课题状态<font face="宋体">*</font></td>
            <td class="formValue">
                <input type="radio" value="已完结" name="subjectstate" disabled="disabled" /><label>已完结</label>

                <input type="radio" value="进行中" name="subjectstate" disabled="disabled" /><label>进行中</label>
            </td>
        </tr>
        <tr>
            <td class="formTitle">选择成员<font face="宋体">*</font></td>
            <td class="formValue" colspan="3">
                <div class="input-group" style="width:100%">
                    <textarea id="groupperson" name="groupperson" type="text" class="form-control" readonly="readonly" isvalid="yes">@Model.groupperson</textarea>
                </div>
            </td>
        </tr>
        <tr>
            <td class="formTitle">附件</td>
            <td class="formValue" colspan="3">
                <div id="uploader" style="border:2px dashed gray; margin-top:10px; height:300px;">
                    <div class="queueList">
                        <div id="dndArea" class="placeholder">
                            <div id="filePicker" style="margin-left:25px; margin-top:10px;">
                                @{
                                    foreach (var file in Model.Files)
                                    {
                                        <div class="row" style="margin:10px;"><div class="col-sm-6">@file.FileName</div><div class="col-sm-2"><a href="../../ResourceFile/DownloadFile?keyValue=-1&filename=@file.FileName&recId=@file.RecId" target="_blank" style="cursor:pointer" title="下载文件"><i class="fa fa-download"></i></a></div></div>

                                    }

                                }

                            </div>
                        </div>
                    </div>
                    <div class="statusBar" style="display:none;">
                        <div class="progress">
                            <span class="text">0%</span>
                            <span class="percentage"></span>
                        </div>
                        <div class="info"></div>

                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td class="formTitle">照片</td>
            <td class="formValue" colspan="3">
                <div id="uploader1" style="border:2px dashed gray; margin-top:10px; height:300px;">
                    <div class="queueList">
                        <div id="dndArea" class="placeholder">
                            <div id="filePicker1" style="margin-left:25px; margin-top:10px;">
                                @{
                                    foreach (var file in Model.Photos)
                                    {
                                        <div class="row" style="margin:10px;">
                                            <div class="col-sm-6">@file.FileName</div><div class="col-sm-2"><a href="../../ResourceFile/DownloadFile?keyValue=-1&filename=@file.FileName&recId=@file.RecId" target="_blank" style="cursor:pointer" title="下载文件"><i class="fa fa-download"></i></a></div>
                                            <img style="width:100px;height:100px" src="@Url.Content(file.FilePath)" />
                                        </div>
                                    }

                                }
                            </div>
                        </div>
                    </div>
                    <div class="statusBar" style="display:none;">
                        <div class="progress">
                            <span class="text">0%</span>
                            <span class="percentage"></span>
                        </div>
                        <div class="info"></div>
                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>
