            })
    }
    function action() {
        $.ajax({
            url: "/..@Url.Action("postAqxxr", "EdActivity")",
            type: "post",
            data: { aqxxr:JSON.stringify(aqxxr) },
            dataType: "json",
            async: false,
            success: function (data) {
                if (data=="成功") {
                    dialogMsg('当前查询数据同步成功！', 0);
                } else {
                    dialogMsg(data+'同步失败！', 0);
                }
            }
        })
    }

