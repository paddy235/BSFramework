                                            <div class="response_show" style="display:none;">
                                                <p>李二毛</p>
                                            </div>
                                        </div>
                                    </div>
                                </li>*@
                                @{
                                    var content = ViewBag.content;
                                    foreach (var item in content)
                                    {
                                        <li class="clearfix">
                                            <span>
                                                第
