                <div style="padding-bottom: 180px;">
                    <div class="drill_div">
                        <label>职责分配</label>
                        <div class="step_div">
                            <ul>
                                @*<li class="clearfix">
                                    <span>第一步</span>
                                    <div class="clearfix height_div">
                                        <div class="pull-left response_div">
                                            <div class="hide_bg">
                                                <img src="@Url.Content("~/Content/styles/static/images/hide_bg.png")">
