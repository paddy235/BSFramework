<script>
    function play(obj) {
        var url = $(obj).data('url');
        $('#audio').attr('src', url);
        audiojs.events.ready(function () {
            audiojs.createAll();
        })
        layer.open({
            type: 1,
            area: ['460px', '36px'],
            content: $('#audio-warp '),
            title: false,
            end: function () {
                $('#audio-warp').html('<audio id="audio" autoplay></audio>').css('display', 'none');
            }
        });
    }
    function getScore(i) {
        var j = 1;
        myscore = i;
        jQuery("#txtScore").text(i + "分");
        jQuery("#Score").val(i);
        jQuery("#Score").text(i);
        jQuery("img[name='score']").each(function () {
            if (j <= i) {
                this.src = "@Url.Content("~/Content/images/start_full.png")";
            } else {
                this.src = "@Url.Content("~/Content/images/start_empty.png")";
            }
            j = j + 1;
        });
    }
</script>

