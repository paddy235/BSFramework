<script>
    function AcceptClick() {
        var json = jQuery('#form1').serializeJSON();

        $.SaveForm({
            url: '@Url.Action("SaveSetting")',
            param: json,
            loading: "数据提交中...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        });
    }
</script>
<div style="padding:20px 10px;overflow-y:hidden;">
    <label style="font-size:14px; margin:10px;">危险预知训练关联工作任务状态</label><input id="yes" name="ItemValue" type="radio" value="是" @(ViewBag.setting == "是" ? "checked" : string.Empty) /><label style="font-size:14px; margin-left:5px; margin-right:10px;" for="yes">是</label><input id="no" name="ItemValue" type="radio" value="否" @(ViewBag.setting != "是" ? "checked" : string.Empty) /><label style="font-size:14px; margin-left:5px; margin-right:10px;" for="no">否</label>
</div>
