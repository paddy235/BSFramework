<script>
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设(表格、树形)宽高
        //$(window).resize(function (e) {
        //    window.setTimeout(function () {
        //        $('#gridTable').setGridWidth(($('.gridPanel').width()));
        //        $("#gridTable").setGridHeight($(window).height() - 136.5);
        //    }, 200);
        //    e.stopPropagation();
        //});
    }
    function GetGrid() {
        var selectedRowIndex = 0;
        var $grid = $("#gridTable");
        $grid.jqGrid({
            height: $(window).height() - 136.5,
            url: '@Url.Action("GetPageListJsonAssay")?type=化验仪器',
            datatype: "json",
            autowidth: true,
            multiselect: true,
            colModel: [
                { label: '主键', name: 'GlassWareId', hidden: true, align: 'center' },
                {
                    label: '操作', name: '', index: '', width: 180, align: 'center',
                    formatter: function (cellvaue, options, rowObject) {
                        return "<a style='' href=\"javascript:detailnew('" + rowObject.GlassWareId + "')\" title=\"\">查看</a><a style='' href=\"javascript:editnew('" + rowObject.GlassWareId + "')\" title=\"\">修改</a><a style='' href=\"javascript:delglass('" + rowObject.GlassWareId + "')\" title=\"\">删除</a>"
                    }
                },
                {
                    label: '仪器名称', name: 'GlassWareName', index: 'GlassWareName', width: 600, align: 'center'
                },
                {
                    label: '相关文件', name: 'OperateVideo', index: 'OperateVideo', width: 300, align: 'center',
                    formatter: function (cellvaue, options, rowObject) {
                        var html = "";
                        if (rowObject.OperateVideo != "") {
                            html += "<a style='text-decoration:none;color:blue;' href=\"javascript:video('" + rowObject.GlassWareId + "')\" title=\"\" target=\"_blank\">操作视频</a>";
                        }
                        return html;
                    }
                }
            ],
            height: $(window).height() - 130,
            viewrecords: true,
            rowNum: 20,
            rowList: [20, 50, 100],
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $grid.getGridParam('selrow');
            },
            gridComplete: function () {
                $grid.setSelection(selectedRowIndex, false);
            }

        });
        $("#btn_Search").click(function () {
            var queryJson = {
                GlassWareName: jQuery('#txt_Keyword').val(),
                GlassWareType: "化验仪器"

            };
            $grid.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
            }).trigger('reloadGrid');
        });
        $("#btn_SearchAll").click(function () {

            $("#txt_Keyword").val('');
            $('#btn_Search').trigger("click");
        });
        $("#refresh").click(function () {

            $("#txt_Keyword").val('');
            $('#btn_Search').trigger("click");
        });
        //查询回车事件
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });

    }
    function imp() {
        dialogOpen({
            id: "Form",
            title: '新增',
            url: '/../@Url.Action("ImportNew")/',
            width: "700px",
            height: "500px",
            btn: null
        });
    }
    //新增
    function btn_add() {
        var height = "700px";
        dialogOpen({
            id: "Form",
            title: '新增',
            url: '/../@Url.Action("FormAssay")',
            width: "1100px",
            height: height,
            callBack: function (iframeId) {
                top.document.getElementById(iframeId).contentWindow.AcceptClick();
            }
        });

    }
    function video(id) {
        dialogOpen({
            id: "Detail",
            title: '查看详情',
            url: '/../@Url.Action("GlassWareVideo")/' + id,
            width: "1050px",
            height: "720px",
            btn: null
        });
    }
    //详细
    function detail() {
        var height = "700px";
        var keyValue = $("#grid").jqGridRowValue("JobId");
        if (keyValue) {
            dialogOpen({
                id: "Detail",
                title: '查看详情',
                url: '/../@Url.Action("Detail")/' + keyValue,
                width: "1100px",
                height: height,
                btn: null
            });
        } else {
            dialogMsg('请选择数据！', 0);
        }
    }
    function detailnew(id) {
        var height = "700px";
        dialogOpen({
            id: "GlassWareDetail",
            title: '查看详情',
            url: '/../@Url.Action("GlassWareDetail")/' + id,
            width: "1100px",
            height: height,
            btn: null
        });
    }
    //编辑
    function edit() {
        var height = "700px";
        var keyValue = $("#grid").jqGridRowValue("JobId");
        if (keyValue) {
            dialogOpen({
                id: "Form",
                title: '编辑',
                url: '/../@Url.Action("Form")/' + keyValue,
                width: "1100px",
                height: height,
                callBack: function (iframeId) {
                    top.document.getElementById(iframeId).contentWindow.AcceptClick();
                }
            });
        } else {
            dialogMsg('请选择数据！', 0);
        }
    }
    function editnew(id) {
        var height = "700px";
        dialogOpen({
            id: "FormGlassWare",
            title: '修改',
            url: '/../@Url.Action("FormAssay")/' + id,
            width: "1100px",
            height: height,
            callBack: function (iframeId) {
                top.document.getElementById(iframeId).contentWindow.AcceptClick1();
            }
        });

    }
    //删除
    function del() {
        var keyValue = $("#grid").jqGridRowValue("JobId");
        if (keyValue) {
            $.RemoveForm({
                url: '/../@Url.Action("DeleteOne")/',
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#grid").resetSelection();
                    $("#grid").trigger("reloadGrid");
                }
            })
        } else {
            dialogMsg('请选择数据！', 0);
        }
    }
    function delglass(id) {
        $.RemoveForm({
            url: '/../@Url.Action("DeleteGlassWare")/',
            param: { keyValue: id },
            success: function (data) {
                $("#gridTable").resetSelection();
                $("#gridTable").trigger("reloadGrid");
            }
        });

    }
    function editlist(id) {
        dialogOpen({
            id: "Form",
            title: '编辑',
            url: '/../@Url.Action("EditList")/' + id,
            width: "1600px",
            height: "700px",
            btn: null
        });
    }
    function exp() {
        var ids = $('#gridTable').jqGrid('getGridParam', 'selarrrow');
        if (ids.length < 1)
        {
            alert('请选择要导出的数据！');
            return;
        }
        var idstr = '';
        ids.forEach(function (value, i)
        {
            idstr += $('#gridTable').getCell(ids[i], "GlassWareId") + ",";
        })
        @*$.ajax({
            url: '@Url.Action("expword")',
            type: 'post',
            data: { ids: idstr },
            loading: "数据提交中...",
            success: function (data) {

            }
        });*@
        window.location.href = '@Url.Action("expword")?ids=' + idstr+'&type=1';
    }
    function imp() {
        dialogOpen({
            id: "Form",
            title: '新增',
            url: '/../@Url.Action("ImportNew")/?type=2',
            width: "800px",
            height: "500px",
            btn: null
        });
    }
</script>

