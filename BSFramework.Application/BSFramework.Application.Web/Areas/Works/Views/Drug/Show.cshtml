        var title = "修改使用预警值";
        var content = $('#warn');
        if (type == "1") {
            title = "修改库存预警值";
            content = $('#warn1');
        }
        id = obj.getAttribute('drugid');
        layer.open({
            type: 1,
            title: title,
            content: content,
            area: ['520px', '300px']
        })
    }
    function fn$in()
    {
        layer.open({
            type: 1,
            title: '入库',
            content: $("#drugin"),
            area: ['520px', '500px']
        })
    }
    function fn$out()
