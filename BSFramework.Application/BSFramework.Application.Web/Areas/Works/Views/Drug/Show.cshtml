        $.ajax({
            url: '@Url.Action("SaveDrugOutNew")',
            type: 'post',
            data: { id: $('#Spec2').val(), num: $('#DrugNum2').val() },
            loading: "数据提交中...",
            success: function (data) {
                if (!data.success) {
                    $("#info").text(data.message);
                    v = layer.open({
                        type: 1,
                        title: '提示消息',
                        content: $('.messInfo'),
                        area: ['300px', '180px']
                    })
                } else {
