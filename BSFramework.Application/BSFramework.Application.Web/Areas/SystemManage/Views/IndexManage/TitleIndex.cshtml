@{
    ViewBag.Title = "TitleIndex";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<style>
    input[type=radio] {
    vertical-align:sub;
    margin-left:10px;
    }
</style>
<script>
    var indexType = 0;
    $(function () {
        GetGrid();
    })
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 180,
            url: '/..@Url.Action("GetTitleList")',
            datatype: "json",
            postData: { indexType: indexType,templet:1},
            colModel: [
                { label: 'Id', name: 'Id', hidden: true },
                {
                    label: '操作', name: 'Opear', width: 100, align: 'center', sortable: false, formatter: function (value, row, data) {
                        return ' <a href="javascript:show(\'' + data.Id + '\',\'' + data.IndexType + '\')" title="查看绑定的指标"><i class="fa fa-gears"></i></a>';
                }
                },
                { label: '分类名称', name: 'Title', width: 600, align: 'center', sortable: false },

                {
                    label: '是否启用', name: 'IsShow', width: 500, align: 'center', sortable: false, formatter: function (value) {
                        if (value == 1) {
                            return "是"
                        }
                        return "否"
                    }
                },
                { label: '排序字段', name: 'Sort', width: 100, align: 'center', sortable: false },

            ],
            rowList: [15, 20, 30, 50, 100],
            rowNum: 15,
            pager: false,
            sortname: 'CreateDate',
            sortorder: 'desc'

        });

        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                keyword: $("#txt_Keyword").val(),
                indexType: indexType,
                templet: $("#Templet").val()
            }
            $gridTable.jqGrid('setGridParam', {
                postData: queryJson
            }).trigger('reloadGrid');
        });
        $("#btn_SearchAll").click(function () {
            $("#txt_Keyword").val("");
            $("#selType").val("");
            var queryJson = {
                keyword: '',
                indexType: indexType
            }
            $gridTable.jqGrid('setGridParam', {
                postData: queryJson
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });

        $("input[name=indexType]").change(function () {
            indexType = $(this).val();
            var queryJson = {
                keyword: $("#txt_Keyword").val(),
                indexType: indexType,
                templet: $("#Templet").val()
            }
            $gridTable.jqGrid('setGridParam', {
                postData: queryJson
            }).trigger('reloadGrid');
        })

        $("#Templet").change(function () {
            $("#btn_Search").click();

        })

    }

